
import vk_api
# Достаём из неё longpoll
from vk_api.longpoll import VkLongPoll, VkEventType



token = "9fc634f2647d0deb91b69a5f4d71d80575e91b34bf61e1c859d2948a15e6c6b471423ef054220a3135052"
bh = vk_api.VkApi(token=token)
give = bh.get_api()
longpoll = VkLongPoll(bh)


def blasthack(id, text):
    bh.method('messages.send', {'user_id': id, 'message': text, 'random_id': 0})


for event in longpoll.listen():
    if event.type == VkEventType.MESSAGE_NEW:
        if event.to_me:
            message = event.text.lower()
            id = event.user_id

            if message == 'привет' or message=='начать':
                blasthack(id, 'Привет, я бот нашего маркеплейса! Чем могу быть полезен?')
            if message == 'что ты можешь?' or message == 'что ты умеешь?':
                blasthack(id, '''Я могу выполнять некоторые задачи:
                1) Рассказать про наш магазин
                2) Посоветовать продукцию, с действующей скидкой
                3) Подсказать, что лучше всего приобретать в этом сезоне
                4) Убедить вас в качестве наших продуктов
                5) Связать вас с поставщиком продукта
                Вам нужно лишь выбрать цифру :)''')
            if message=='1':
                blasthack(id, 'Наш Маркеплейс "GreenStore" даёт возможность удобной коммуникации между производителем и потребителем сельскохозяйственной продукции. На рынке мы совсем недавно, но уже пользуемся неплохим спросом за счёт нашего удобного интерфейса и качественной доставки заказанного товара. Можете быть полностью уверены и делать заказ в нашем маркеплейсе!')
            elif message=='2':
                blasthack(id, 'На данный момент хорошая скидка идёт за закупку большого количества товара, ведь производители могут спокойно регулировать цены.')
            elif message=='3':
                blasthack(id,'В этом сезоне у пользователей большой спрос на: *ссылка на товар*')
            elif message=='4':
                blasthack(id,'Каждый производитель проходил проверку в нашем маркеплейсе поэтому мы можем с полной уверенностью говорить о хорошем качестве наших продуктов.')
            elif message=='5':
                blasthack(id,'Вы можете написать ему самостоятельно *ссылка на продавца* или же с помощью меня: Как вам угодно?')
            if message=='Самостоятельно':
                blasthack(id,'Хорошо')
            elif message=='С помощью тебя':
                blasthack(id, 'Хорошо, мы это организуем')
            elif message=='Пока' or message=='До свидания':
                blasthack(id, 'До свидания, удачных покупок, надеюсь вы будете довольны!')

            elif message == 'как дела?':
                blasthack(id, 'Хорошо, а твои как?')
            elif message == 'хорошо' or message=='нормально' or message=='плохо':
                blasthack(id, 'Понял')
            


